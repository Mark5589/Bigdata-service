doctype html
html
  head
    link(rel='stylesheet', href='/stylesheets/filter.css')
  body.filter
    form(action='/filter/', method='POST')
        p
          | from date:
          input(type="date" name="fromDate" id="dateofbirth", value='')
          | to date:
          input(type='date', name='toDate', ,id="dateofbirth" value='')
          | <br>
          | start Time
          input(type='time', name='fromTime', ,id="dateofbirth" value='09:00')
          | end Time
          input(type='time', name='toTime', ,id="dateofbirth" value='14:00')
        input(type='submit', value='Submit')
  
    p(style = a_style) Most popular item: #{most_popular_item} <br>
    a(href='/filter/filteredData'  style= a_style) click to show results
